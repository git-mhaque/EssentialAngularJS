    <p>
        <input type="text" placeholder="Enter your name here" ng-model="name" />
    </p>
    <p>
        <my-component text="Click Me" clickevent="sayHello()" myvalue="name"></my-component>
    </p>
    *@

    <audit-panel who="vm.Who" when="vm.When" ng-show="true"></audit-panel>
  

</div>


@section Scripts {
    <script src=@Scripts.Url("~/AppScripts/controllers/taskController.js")></script>
}
