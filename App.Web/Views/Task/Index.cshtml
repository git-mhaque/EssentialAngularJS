
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="PlayerCtrl" data-ng-init="initPage();">
    <h2>Task</h2>
    
    <toaster-container></toaster-container>

    <form class="form-horizontal" name="form" novalidate >

        <submit-feedback rvm="rvmProject"></submit-feedback>

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label" for="ddlPatientTitle">
                        Project Name
                    </label>
                </div>
                <div class="col-md-5">
                    <input type="text" name="Name" placeholder="Enter project name" ng-model="vmFormProject.Name" class="form-control" />
                </div>
                <div class="col-md-3">
                    <span class="text-danger" ng-show="form.Name.$error.required && submitClicked">* Project name is required.</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label" for="ddlPatientTitle">
                        Project Description
                    </label>
                </div>
                <div class="col-md-5">
                    <input type="text" placeholder="Enter project description" ng-model="vmFormProject.Description" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label" for="ddlPatientTitle">
                        <button class="btn btn-sm btn-success" ng-click="saveProject()">Save Project</button>
                    </label>
                </div>
                <div class="col-md-5">
                </div>
            </div>
        </div>
    </form>


    <div kendo-grid="grid" 
         k-data-source="gridData" 
         k-columns="gridColumns" 
         k-selectable="false" 
         k-sortable="true" 
         k-filterable="false" 
         k-pageable='{ "refresh": false, "pageSizes": true }'></div>

