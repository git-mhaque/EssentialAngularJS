    </p>
    <p>
        <my-component text="Click Me" clickevent="sayHello()" myvalue="name"></my-component>
    </p>
    *@

</div>


@section Scripts {
    <script src=@Scripts.Url("~/AppScripts/Controller/taskController.js")></script>
}
