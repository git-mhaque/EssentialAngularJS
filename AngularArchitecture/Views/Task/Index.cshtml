
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="PlayerCtrl" data-ng-init="initPage();">
    <h2>Task</h2>
     <div>
         {{vmFormProject  | json}}
     </div>  
    
    <toaster-container></toaster-container>

    <form class="form-horizontal" novalidate>
        
        <!-- submit feedback-->
        
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label" for="ddlPatientTitle">
                        Project Name
                    </label>
                </div>
                <div class="col-md-5">
                    <input type="text" placeholder="Enter project name" ng-model="vmFormProject.Name" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label" for="ddlPatientTitle">
                        Project Description
                    </label>
                </div>
                <div class="col-md-5">
                    <input type="text" placeholder="Enter project description" ng-model="vmFormProject.Description" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label" for="ddlPatientTitle">
                        <button class="btn btn-sm btn-success" ng-click="addProject()">Add Project</button>
                    </label>
                </div>
                <div class="col-md-5">
                </div>
            </div>
        </div>
    </form>


    <div kendo-grid="grid" 
         k-data-source="gridData" 
         k-columns="gridColumns" 
         k-selectable="false" 
         k-sortable="true" 
         k-filterable="false" 
         k-pageable='{ "refresh": false, "pageSizes": true }'></div>

